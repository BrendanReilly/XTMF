<Window x:Class="XTMF.Gui.UserControls.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:XTMF.Gui" SizeToContent="Height"
        Title="Error" Height="AUTO" Width="500"
        Background="{StaticResource ResourceKey=ControlHeaderBrush}" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Background="#FF252526">
        <Grid.RowDefinitions>
            <RowDefinition Height="20px" />
            <RowDefinition Height="*" />
            <RowDefinition Height="AUTO" />
            <RowDefinition Height="20px" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20px" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20px" />
        </Grid.ColumnDefinitions>
        <Grid  Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="AUTO" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="White" FontSize="20" Margin="5px,5px,5px,5px">Error Message</TextBlock>
                    <Image Grid.Column="1" Grid.Row="0" Width="32" Margin="5,5,5,5" VerticalAlignment="Top" Source="/XTMF.Gui;component/Images/delete.png" />
                </StackPanel>
                <ScrollViewer MaxHeight="150" HorizontalAlignment="Stretch" VerticalScrollBarVisibility="Auto" CanContentScroll="True" Style="{DynamicResource XTMFScrollViewer}">
                    <TextBox x:Name="MessageBox" Margin="5" TextWrapping="Wrap" IsReadOnly="True" Foreground="White" FontSize="12" >
                        <TextBox.Background>
                            <SolidColorBrush Color="{StaticResource ResourceKey=ControlBackgroundColour}"/>
                        </TextBox.Background>
                    </TextBox>
                </ScrollViewer>
            </StackPanel>
            <StackPanel Grid.Row="1">
                <TextBlock Foreground="White" FontSize="20" Margin="5px,5px,5px,5px">Stack Trace (For Debugging)</TextBlock>
                <ScrollViewer MaxHeight="150" Margin="5" HorizontalAlignment="Stretch" VerticalScrollBarVisibility="Auto" CanContentScroll="True" Style="{DynamicResource XTMFScrollViewer}">
                    <TextBox x:Name="StackTraceBox" TextWrapping="Wrap" IsReadOnly="True" Foreground="White" FontSize="12" Background="{StaticResource ResourceKey=ControlBackgroundBrush}" />
                </ScrollViewer>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <my:BorderIconButton Margin="5" Grid.Column="0" HorizontalAlignment="Stretch" Icon="/XTMF.Gui;component/Images/delete.png" Header="Continue" Text="Continue on" Clicked="Continue" />
            <my:BorderIconButton Margin="5" Grid.Column="1" HorizontalAlignment="Stretch" Icon="/XTMF.Gui;component/Images/copyHS.png" Header="Copy" Text="Copy Error to Clipboard" Clicked="Copy" />
        </Grid>
    </Grid>
</Window>