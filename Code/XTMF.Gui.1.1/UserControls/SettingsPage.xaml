<UserControl x:Class="XTMF.Gui.UserControls.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XTMF.Gui.UserControls"
             xmlns:my="clr-namespace:XTMF.Gui"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="{StaticResource WindowBackgroundBrush}">
    <StackPanel Background="{StaticResource ControlBackgroundBrush}" Margin="0.25cm"  VerticalAlignment="Center">
        <my:HintedTextBox x:Name="ProjectDirectoryBox" Margin="0.25cm,5,0.25cm,5" Text="{Binding ProjectDirectory}" HintText="Project Directory" Keyboard.PreviewKeyDown="HintedTextBox_KeyDown" />
            <my:HintedTextBox Margin="0.25cm,0,0.25cm,5" Text="{Binding ModelSystemDirectory}" HintText="Model System Directory" Keyboard.PreviewKeyDown="HintedTextBox_KeyDown" />
            <my:HintedTextBox Margin="0.25cm,0,0.25cm,5" Text="{Binding HostPort}" HintText="Host Networking Port" Keyboard.PreviewKeyDown="HintedTextBox_KeyDown" />
    </StackPanel>
    </Grid>
</UserControl>
