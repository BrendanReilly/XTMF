<UserControl x:Class="XTMF.Gui.UserControls.ModuleContextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XTMF.Gui.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid  Background="{DynamicResource WindowBackgroundBrush2}">
        
        
     
        <Label Content="Some Text"></Label>

        <ListView  BorderThickness="0"  Background="{DynamicResource WindowBackgroundBrush2}"   x:Name="ModulePathList"  ContextMenuOpening="FrameworkElement_OnContextMenuOpening">
            
            <ListView.ContextMenu  >
                <ContextMenu Name="ModuleContextMenu" Placement="Bottom">
                
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal">
                       
                    </StackPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel  Orientation="Horizontal">
                        
                       
                       
                    <Border BorderThickness="0,1,0,1"  BorderBrush="{DynamicResource WindowBackgroundBrush4}">
                        <StackPanel   Orientation="Horizontal" Background="{DynamicResource WindowBackgroundBrush2}" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label  Tag="{Binding Path=.}" Foreground="{DynamicResource ThemeTextColorBrush}" Content="{Binding Path=Name}" MouseDoubleClick="Control_OnMouseDoubleClick" HorizontalAlignment="Center"></Label>

                     
                       
                        
                </StackPanel>
                        </Border>
                        
                    <Polyline StrokeThickness="2" Points="0,0 14,14, 0,28" Stroke="{DynamicResource WindowBackgroundBrush4}" Fill="{DynamicResource WindowBackgroundBrush2}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</UserControl>

