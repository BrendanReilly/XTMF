<UserControl x:Class="XTMF.Gui.UserControls.ModuleContextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XTMF.Gui.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid SnapsToDevicePixels="True"  Background="{DynamicResource WindowBackgroundBrush2}">



        <ListView  SnapsToDevicePixels="True"  SelectionMode="Single" SelectionChanged="ModulePathList_OnSelectionChanged"  BorderThickness="0"  Background="{DynamicResource WindowBackgroundBrush2}"   x:Name="ModulePathList">

            <ListView.ItemContainerStyle>

                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderBrush" Value="Transparent"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListViewItem}">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush2}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ContextMenu>
                <ContextMenu Closed="ContextMenu_Closed" Name="ModuleContextMenu" Placement="Bottom">

                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel SnapsToDevicePixels="True" Orientation="Horizontal">

                    </StackPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel SnapsToDevicePixels="True"  Margin="-8,0,0,0" PreviewMouseRightButtonDown="ModulePathList_OnPreviewMouseRightButtonDown" Tag="{Binding Path=.}"  Orientation="Horizontal">

                        <Grid SnapsToDevicePixels="True">
                            <Polyline  SnapsToDevicePixels="True" StrokeThickness="1" Points="0,0 6,10 0,19" Stroke="{DynamicResource AccentBrush}">
                            <Polyline.Style>
                                <Style TargetType="{x:Type Polyline}">
                                    <Style.Triggers>

                                      
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="True">
                                            <Setter Property="StrokeThickness" Value="0">

                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Polyline.Style>
                            </Polyline>
                            <Polyline  SnapsToDevicePixels="True" StrokeThickness="0" Points="1,0 7,10 1,19 8,19 8,0">
                                <Polyline.Style>
                                    <Style TargetType="{x:Type Polyline}">
                                        <Style.Triggers>

                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=IsMouseOver}"  Value="False" />
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="False" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Fill" Value="{DynamicResource WindowBackgroundBrush2}">

                                                </Setter>
                                            </MultiDataTrigger>

                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=IsMouseOver}"  Value="True" />
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="True" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Fill" Value="{DynamicResource FocusBrushHover3}">

                                                </Setter>
                                            </MultiDataTrigger>

                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=IsMouseOver}"  Value="True" />
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="False" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Fill" Value="{DynamicResource FocusBrushHover2}">

                                                </Setter>
                                            </MultiDataTrigger>

                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=IsMouseOver}"  Value="False" />
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="True" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Fill" Value="{DynamicResource ControlColourBrush}">

                                                </Setter>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Polyline.Style>
                            </Polyline>
                        </Grid>

                     
                        <Border  SnapsToDevicePixels="True" BorderThickness="0,0,0,0"  BorderBrush="{DynamicResource WindowBackgroundBrush4}">
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">
                                    <Style.Triggers>

                                         <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=IsMouseOver}"  Value="False" />
                                                <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="False" />
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush2}">

                                        </Setter>
                                        </MultiDataTrigger>

                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=IsMouseOver}"  Value="True" />
                                                <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Background" Value="{DynamicResource FocusBrushHover3}">

                                            </Setter>
                                        </MultiDataTrigger>

                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=IsMouseOver}"  Value="True" />
                                                <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="False" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Background" Value="{DynamicResource FocusBrushHover2}">

                                            </Setter>
                                        </MultiDataTrigger>

                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=IsMouseOver}"  Value="False" />
                                                <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Background" Value="{DynamicResource ControlColourBrush}">

                                            </Setter>
                                        </MultiDataTrigger>




                                    </Style.Triggers>


                                </Style>
                            </Border.Style>
                            <StackPanel  SnapsToDevicePixels="True"   Orientation="Horizontal"  HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Label Margin="0,-5,0,0" SnapsToDevicePixels="True"  Tag="{Binding Path=.}"  Content="{Binding Path=Name}" MouseDoubleClick="Control_OnMouseDoubleClick" HorizontalAlignment="Center">
                                    <Label.Style >
                                        <Style TargetType="{x:Type Label}">
                                            
                                            
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="True">
                                                    <Setter Property="Foreground" Value="White">

                                                    </Setter>

                                                    
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="False">
                                                    <Setter Property="Foreground" Value="{DynamicResource ThemeTextColorBrush}">

                                                    </Setter>


                                                </DataTrigger>
                                            </Style.Triggers>
                                            
                                        </Style>
                                    </Label.Style>
                                </Label>




                            </StackPanel>
                        </Border>
                        <Grid  SnapsToDevicePixels="True">
                            
                            <Polyline  SnapsToDevicePixels="True" StrokeThickness="2" Points="0,0 5,10, 0,19">
                                <Polyline.Style>
                                    <Style TargetType="{x:Type Polyline}">
                                        <Style.Triggers>


                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=IsMouseOver}"  Value="False" />
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="False" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Fill" Value="{DynamicResource WindowBackgroundBrush2}">

                                                </Setter>
                                            </MultiDataTrigger>

                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=IsMouseOver}"  Value="True" />
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="True" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Fill" Value="{DynamicResource FocusBrushHover3}">

                                                </Setter>
                                            </MultiDataTrigger>

                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=IsMouseOver}"  Value="True" />
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="False" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Fill" Value="{DynamicResource FocusBrushHover2}">

                                                </Setter>
                                            </MultiDataTrigger>

                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=IsMouseOver}"  Value="False" />
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="True" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Fill" Value="{DynamicResource ControlColourBrush}">

                                                </Setter>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Polyline.Style>
                            </Polyline>
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</UserControl>

