<UserControl x:Class="XTMF.Gui.UserControls.ModuleContextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XTMF.Gui.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="{DynamicResource WindowBackgroundBrush2}">

        <ListView BorderThickness="0" Background="{DynamicResource WindowBackgroundBrush2}"   x:Name="ModulePathList">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"></StackPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Label Tag="{Binding Path=.}" Foreground="{DynamicResource ThemeTextColorBrush}" Content="{Binding Path=Name}" MouseDoubleClick="Control_OnMouseDoubleClick"></Label>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</UserControl>

