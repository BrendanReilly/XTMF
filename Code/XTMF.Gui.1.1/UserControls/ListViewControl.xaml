    </UserControl.Resources>
    <Grid HorizontalAlignment="Stretch" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>


        <Border Grid.Column="0" UseLayoutRounding="True" HorizontalAlignment="Center" VerticalAlignment="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListViewItem},Path=VerticalAlignment,Mode=TwoWay}">

            <Path Margin="5,5,5,5" Name="PathIcon" Stretch="Uniform" Opacity="0.8"
                  Fill="{DynamicResource MaterialDesignBody}"
                  Data="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:ListViewControl},Path=IconPath.Data,Mode=TwoWay}">
                
             
            </Path>
  
        </Border>
        <StackPanel Margin="8,0,0,0" Orientation="Vertical" Grid.Column="1">
            <Label Margin="0,8,0,0" Height="20" Padding="0" FontWeight="Bold" Name="Title"  Foreground="{DynamicResource MaterialDesignBody}"
                   Content="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:ListViewControl},Path=TitleText,Mode=TwoWay}" ></Label>
            <Label Height="20" Padding="0" Name="SubTextLabel" 
                   
                   Content="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:ListViewControl},Path=SubText,Mode=TwoWay}"></Label>
            <Label Height="20" Padding="0" Name="StatusTextLabel" 
                   Visibility="Visible" Opacity="0.7"
                   Content="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:ListViewControl},Path=StatusText,Mode=TwoWay}" FontStyle="Italic"></Label>

        </StackPanel>
    </Grid>
    
     
