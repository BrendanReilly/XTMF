<UserControl x:Class="XTMF.Gui.UserControls.LaunchRemoteClientWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XTMF.Gui.UserControls"
             xmlns:my="clr-namespace:XTMF.Gui"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Focusable="True"
             mc:Ignorable="d" Background="{DynamicResource MaterialDesignPaper}">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Background="{DynamicResource MaterialDesignPaper}">
        <TextBox x:Name="Server" Margin="0.25cm,0.25cm,0.25cm,0.1cm" materialDesign:HintAssist.Hint="Server Address" PreviewKeyDown="Server_PreviewKeyDown"  Style="{DynamicResource MaterialDesignFloatingHintTextBox}" />
        <TextBox x:Name="Port"   Margin="0.25cm" materialDesign:HintAssist.Hint="Port Number" PreviewKeyDown="Port_PreviewKeyDown" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"  />
        <my:BorderIconButton Margin="9.44881889763779,9.44881889763779,9.44881889763779,25" Icon="/XTMF.Gui;component/Resources/ic_arrow_forward_white_36dp.png" Header="Launch" Width="200" Text="Launch Remote Client" Clicked="Launch_Clicked" />
    </StackPanel>
</UserControl>
