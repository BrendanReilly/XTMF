<UserControl x:Class="XTMF.Gui.UserControls.StringRequestDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XTMF.Gui.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" PreviewKeyDown="StringRequestDialog_OnPreviewKeyDown" 
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid  MinWidth="300" Margin="5 5 5 5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="300"></ColumnDefinition>
            <ColumnDefinition Width="50"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox  Grid.Column="0"  MinWidth="300"   x:Name="StringInputTextBox" materialDesign:HintAssist.Hint="{Binding QuestionText}" TextChanged="StringInputTextBox_OnTextChanged"  PreviewKeyDown="StringInputTextBox_OnPreviewKeyDown"  Style="{DynamicResource MaterialDesignFloatingHintTextBox}" />
        <Button Margin="3 0 0 0"  Grid.Column="1" Style="{DynamicResource MaterialDesignRaisedAccentButton}" Width="50"
                ToolTip="Resource name: MaterialDesignRaisedAccentButton">
            OK
        </Button>
    </Grid>
</UserControl>
