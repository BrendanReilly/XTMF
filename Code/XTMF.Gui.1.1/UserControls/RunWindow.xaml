<UserControl x:Class="XTMF.Gui.UserControls.RunWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:my="clr-namespace:XTMF.Gui"
             mc:Ignorable="d" Background="{StaticResource WindowBackgroundBrush}">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Margin="5" HorizontalAlignment="Stretch" BorderBrush="White" BorderThickness="1" Background="{StaticResource ControlBackgroundBrush}">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="/XTMF.Gui;component/Resources/Run.png" Width="24" Height="24" Margin="0,0,0.25cm,0" />
                <TextBlock Grid.Column="1" Foreground="White" FontSize="20" Text="Run Name: " />
                <TextBlock Grid.Column="2" x:Name="RunNameLabel" Foreground="White" FontSize="20" TextWrapping="Wrap" Text="Run Name" />
            </Grid>
        </Border>
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="AUTO" />
                <ColumnDefinition Width="AUTO" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1" Background="{StaticResource ResourceKey=ControlBackgroundBrush}" BorderBrush="White" BorderThickness="1"
                    VerticalAlignment="Stretch" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="AUTO" />
                        <RowDefinition Height="AUTO" />
                        <RowDefinition Height="AUTO" />
                    </Grid.RowDefinitions>

                    <my:BorderIconButton Grid.Row="0" x:Name="OpenDirectoryButton" Margin="5,5,5,5" Width="250" Header="Open Run Output"
                                     Text="Open the run's output directory" Icon="/XTMF.Gui;component/Resources/FolderOpen_32x32_72.png"
                                     HighlightColour="{StaticResource InformationGreen}"
                                     Clicked="OpenDirectoryButton_Clicked" />
                    <my:BorderIconButton Grid.Row="1" x:Name="CancelButton" Margin="5,5,5,5" Width="250" Header="Cancel Run"
                                     Text="Cancel the run, if possible" Icon="/XTMF.Gui;component/Images/delete.png"
                                     HighlightColour="{StaticResource WarningRed}"
                                     Clicked="CancelButton_Clicked" />
                    <my:BorderIconButton Grid.Row="2" x:Name="ContinueButton" IsEnabled="False" Margin="5,5,5,5" Width="250" Header="Continue"
                                     Text="Continue to the project page" Icon="/XTMF.Gui;component/Resources/XTMFIcon.png"
                                 HighlightColour="{StaticResource SelectionBlue}"
                                     Clicked="ContinueButton_Clicked" />
                </Grid>
            </Border>
            <Border Grid.Column="2" Background="{StaticResource ControlBackgroundBrush}" BorderBrush="White" BorderThickness="1" Width="300" Margin="5">
                <ScrollViewer  HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="AUTO" />
                            <RowDefinition Height="AUTO" />
                            <RowDefinition Height="AUTO" />
                            <RowDefinition Height="AUTO" />
                            <RowDefinition Height="AUTO" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" x:Name="StatusLabel" Foreground="White" FontSize="16" Text="Status" TextTrimming="WordEllipsis" HorizontalAlignment="Center"
                                       TextAlignment="Center" TextWrapping="Wrap" />
                        <my:TMGProgressBar Grid.Row="1" x:Name="ProgressBar" Background="#222222" HorizontalAlignment="Stretch" Height="20" Minimum="0"  Maximum="10000" Value="0"  FontSize="14" IsIndeterminate="False" Margin="5,5,5,5" />
                        <Border Grid.Row="2" x:Name="AdditionDetailsPanelBorder" BorderBrush="White" Height="0" BorderThickness="1" CornerRadius="5" Margin="5" Visibility="Collapsed">
                            <my:CollapsePanel x:Name="AdditionDetailsPanel" IsExpanded="False" InternalHeight="150" Header="Additional Information" Foreground="White" />
                        </Border>
                        <Label Grid.Row="3" x:Name="StartTimeLabel" Foreground="White" FontSize="14" Content="Start Time" HorizontalAlignment="Left" Margin="5,0,0,0" />
                        <Label Grid.Row="4" x:Name="ElapsedTimeLabel" Foreground="White" FontSize="14" Content="Elapsed Time" HorizontalAlignment="Left" Margin="5,0,0,0" />
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
