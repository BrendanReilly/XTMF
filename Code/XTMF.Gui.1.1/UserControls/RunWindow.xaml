<UserControl x:Class="XTMF.Gui.UserControls.RunWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:my="clr-namespace:XTMF.Gui"
             xmlns:userControls="clr-namespace:XTMF.Gui.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" DataContext="{Binding .}"
             mc:Ignorable="d" Background="{DynamicResource MaterialDesignPaper}">
   
    <Grid Name="BaseGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="54"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"></RowDefinition>
           <!-- <RowDefinition Height="*"/> -->
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" ColumnSpan="3" Background="{DynamicResource MaterialDesignPaper}">

            <ToolBarTray IsLocked="True" Grid.Row="0" Height="54" >
                <ToolBar VerticalContentAlignment="Stretch" Style="{DynamicResource MaterialDesignToolBar}" ClipToBounds="True">
                    <Button  x:Name="OpenDirectoryButton" Click="OpenDirectoryButton_Clicked" ToolTip="Open run output folder" >
                        <materialDesign:PackIcon Kind="FolderOutline" />
                    </Button>

                    <Button Style="{DynamicResource MaterialDesignFloatingActionMiniAccentButton}"  Width="24" Height="24"
                            materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                            materialDesign:ButtonProgressAssist.Value="-1" 
                            materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                            x:Name="CancelButton" Click="CancelButton_Clicked"  ToolTip="Stop Run" >
                        <materialDesign:PackIcon Kind="Stop" />
                    </Button>
                    <Button x:Name="ClearRunButton"  Click="ClearRunButton_Click" ToolTip="Clear Run Display" >
                        <materialDesign:PackIcon Kind="NotificationClearAll" />
                    </Button>
                  


                </ToolBar>
                </ToolBarTray>
            <!--
                    <StackPanel Margin="0" FlowDirection="LeftToRight" Orientation="Horizontal">
                <userControls:FlatToolButton  x:Name="OpenDirectoryButton" ToolText="Open Run Output" Click="OpenDirectoryButton_Clicked" >
                    <userControls:FlatToolButton.IconPath  >
                        <Path Data="{DynamicResource FolderOpenIconPath}" Stretch="Uniform" />
                    </userControls:FlatToolButton.IconPath>
                </userControls:FlatToolButton>
                <userControls:FlatToolButton Click="CancelButton_Clicked" x:Name="CancelButton"  ToolText="Cancel Run">
                    <userControls:FlatToolButton.IconPath  >
                        <Path Data="{DynamicResource CancelIconPath}" Stretch="Uniform" />
                    </userControls:FlatToolButton.IconPath>
                </userControls:FlatToolButton>
                <userControls:FlatToolButton IsEnabled="{Binding Path=IsRunClearable,
                        RelativeSource={RelativeSource AncestorType={x:Type userControls:RunWindow}}}"
                        Click="ClearRunButton_Click" x:Name="ClearRunButton"  ToolText="Clear Run Display">
                    <userControls:FlatToolButton.IconPath>
                        <Path  Data="{DynamicResource ClearIconPathGeometry}" Stretch="Uniform" />
                    </userControls:FlatToolButton.IconPath>
                </userControls:FlatToolButton>
                <userControls:FlatToolButton x:Name="ContinueButton" Visibility="Hidden" ToolText="Continue to Project">
                    <userControls:FlatToolButton.IconPath>
                        <Path Data="{DynamicResource Checkmark}" Stretch="Uniform" />
                    </userControls:FlatToolButton.IconPath>
                </userControls:FlatToolButton>
            </StackPanel> -->
        </Grid>
        <GroupBox Visibility="Collapsed"  Foreground="{DynamicResource MaterialDesignBody}" Grid.Row="1" Grid.ColumnSpan="3"  Grid.Column="0" Margin="3" Header="Module Execution Status" BorderThickness="0.5" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Center">
            <Border Grid.Row="2" x:Name="AdditionDetailsPanelBorder" Height="0" BorderThickness="0" CornerRadius="5" Margin="5" Visibility="Collapsed">
                <my:CollapsePanel x:Name="AdditionDetailsPanel" IsExpanded="False" InternalHeight="150" Header="Additional Information"  />
            </Border>
        </GroupBox>
        <GroupBox Foreground="{DynamicResource MaterialDesignBody}" Margin="3" Grid.Row="1" Grid.Column="2" Header="Run Status" BorderThickness="0.5" Visibility="Collapsed">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                    <Grid Margin="0" Height="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="1" Foreground="{DynamicResource MaterialDesignBody}" FontSize="20" Text="Run Name: "  Visibility="Hidden"/>
                        <TextBlock Grid.Column="2" x:Name="RunNameLabel" Foreground="{DynamicResource MaterialDesignBody}" FontSize="20" TextTrimming="CharacterEllipsis" Text="Run Name" Visibility="Hidden" />
                    </Grid>
                </Border>
                <Grid Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" 
                    VerticalAlignment="Stretch" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="AUTO" />
                                <RowDefinition Height="AUTO" />
                                <RowDefinition Height="AUTO" />
                            </Grid.RowDefinitions>
                        </Grid>
                    </Border>
                    <Border HorizontalAlignment="Stretch"   BorderThickness="0"  Margin="5">
                        <ScrollViewer  HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="AUTO" />
                                    <RowDefinition Height="AUTO" />
                                    <RowDefinition Height="AUTO" />
                                    <RowDefinition Height="AUTO" />
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" x:Name="StatusLabel" Foreground="{DynamicResource MaterialDesignBody}"  Text="Status" TextTrimming="WordEllipsis" HorizontalAlignment="Left"
                                       TextAlignment="Center" TextWrapping="Wrap" />
                                <my:TMGProgressBar Grid.Row="1" x:Name="ProgressBar" Background="{DynamicResource MaterialDesignBackground}" HorizontalAlignment="Stretch" Height="20" Minimum="0"  Maximum="10000" Value="0"  FontSize="14" IsIndeterminate="False" Margin="5,5,5,5" Foreground="{DynamicResource SecondaryAccentBrush}"  />
                                <Label Grid.Row="2" x:Name="StartTimeLabel" Foreground="{DynamicResource MaterialDesignBody}" FontSize="14" Content="Start Time" HorizontalAlignment="Left" Margin="5,0,0,0" />
                                <Label Grid.Row="3" x:Name="ElapsedTimeLabel" Foreground="{DynamicResource MaterialDesignBody}" FontSize="14" Content="Elapsed Time" HorizontalAlignment="Left" Margin="5,0,0,0" />
                            </Grid>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>
        </GroupBox>
        <GroupBox  Style="{DynamicResource MaterialDesignCardGroupBox}" Margin="12"  Grid.ColumnSpan="3" Foreground="{DynamicResource MaterialDesignBody}"  Grid.Row="1" Grid.Column="0" Header="Console Output" BorderThickness="0.5">
            <Border  Margin="2"  x:Name="ConsoleBorder" BorderThickness="0" VerticalAlignment="Stretch"
                Visibility="Visible" >
                <Grid VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Border HorizontalAlignment="Stretch" Margin="0,0,0,0" BorderThickness="1"  Grid.Row="0" >
                        <ScrollViewer  Padding="0" x:Name="ConsoleScrollViewer"   BorderThickness="0"  
                              HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible"
                              VerticalAlignment="Stretch"  Margin="0,0,0,0">
                            <TextBox  HorizontalAlignment="Stretch" Padding="0" Margin="0" x:Name="ConsoleOutput" 
                                      Foreground="{DynamicResource MaterialDesignBody}"
                                      TextWrapping="Wrap" Text="{Binding ConsoleOutput}" UndoLimit="0" IsUndoEnabled="False"
                                      TextChanged="ConsoleOutput_TextChanged" IsReadOnly="True" IsReadOnlyCaretVisible="True" BorderBrush="{x:Null}" FontFamily="Lucida Console"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>
        </GroupBox>
        <GroupBox  Style="{DynamicResource MaterialDesignCardGroupBox}"  Name="ErrorGroupBox"  Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Header="Model System Errors" 
                   Visibility="{Binding ErrorVisibility,RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type userControls:RunWindow}}}" Margin="12"> 
            <ListView Name="ErrorListView" DataContext="{Binding }" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header=" " DisplayMemberBinding="{Binding RelativeSource={RelativeSource FindAncestor, 
                                         AncestorType={x:Type ListViewItem}}, 
                                         Converter={StaticResource IndexConverter}}"></GridViewColumn>
                        <GridViewColumn Header="Module" DisplayMemberBinding="{Binding ModelSystemName}"></GridViewColumn>
                        <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}"></GridViewColumn>
                        <GridViewColumn Header="Stack Trace">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                <materialDesign:PopupBox Margin="16,0,16,0" StaysOpen="True" >
                                    
                                        <materialDesign:PopupBox.ToggleContent>

                                            <TextBlock Foreground="{DynamicResource SecondaryAccentBrush}" Style="{DynamicResource MaterialDesignBody1TextBlock}"  Text="Test"></TextBlock>
                                        </materialDesign:PopupBox.ToggleContent>
                                    <TextBlock Text="{Binding StackTrace}"></TextBlock>
                                    </materialDesign:PopupBox>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
        
    </Grid>
</UserControl>