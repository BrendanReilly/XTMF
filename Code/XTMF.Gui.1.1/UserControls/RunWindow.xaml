<UserControl x:Class="XTMF.Gui.UserControls.RunWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:my="clr-namespace:XTMF.Gui"
             xmlns:userControls="clr-namespace:XTMF.Gui.UserControls"
             mc:Ignorable="d" Background="{DynamicResource WindowBackgroundBrush3}" >

    <Grid Name="BaseGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="400"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" ColumnSpan="3" Background="{DynamicResource WindowBackgroundBrush1}">
            <StackPanel Margin="0" FlowDirection="LeftToRight" Orientation="Horizontal">


                <userControls:FlatToolButton  x:Name="OpenDirectoryButton" ToolText="Open Run Output" Click="OpenDirectoryButton_Clicked" >

                    <userControls:FlatToolButton.IconPath  >
                        <Path Data="{DynamicResource FolderOpenIconPath}" Stretch="Uniform" >

                        </Path>
                    </userControls:FlatToolButton.IconPath>
                </userControls:FlatToolButton>
                <userControls:FlatToolButton Click="CancelButton_Clicked" x:Name="CancelButton"  ToolText="Cancel Run">

                    <userControls:FlatToolButton.IconPath  >
                        <Path Data="{DynamicResource CancelIconPath}" Stretch="Uniform" >
                            
                        </Path>
                    </userControls:FlatToolButton.IconPath>
                </userControls:FlatToolButton>

                <userControls:FlatToolButton x:Name="ContinueButton" Visibility="Hidden" Click="ContinueButton_Clicked"  ToolText="Continue to Project">

                    <userControls:FlatToolButton.IconPath  >
                        <Path Data="{DynamicResource Checkmark}" Stretch="Uniform" >

                        </Path>
                    </userControls:FlatToolButton.IconPath>
                </userControls:FlatToolButton>
            </StackPanel>
        </Grid>
        <GroupBox Foreground="{DynamicResource ThemeTextColorBrush}" Grid.Row="1"  Grid.Column="0"  Margin="3" Header="Module Execution Status" BorderThickness="0.5">

            <Border Grid.Row="2" x:Name="AdditionDetailsPanelBorder" BorderBrush="White" Height="0" BorderThickness="0" CornerRadius="5" Margin="5" Visibility="Collapsed">
                <my:CollapsePanel x:Name="AdditionDetailsPanel" IsExpanded="False" InternalHeight="150" Header="Additional Information" Foreground="White" />
            </Border>
          
        </GroupBox>
        <GroupBox Foreground="{DynamicResource ThemeTextColorBrush}" Margin="3" Grid.Row="1" Grid.Column="1" Header="Run Status" BorderThickness="0.5" >
        <Grid  Background="{DynamicResource WindowBackgroundBrush3}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="0"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                <Grid Margin="0" Height="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" Foreground="{DynamicResource ThemeTextColorBrush}" FontSize="20" Text="Run Name: "  Visibility="Hidden"/>
                    <TextBlock Grid.Column="2" x:Name="RunNameLabel" Foreground="{DynamicResource ThemeTextColorBrush}" FontSize="20" TextTrimming="CharacterEllipsis" Text="Run Name" Visibility="Hidden" />
                </Grid>
            </Border>
            <Grid Grid.Row="1" >
                <Grid.ColumnDefinitions>
                    
                    <ColumnDefinition Width="*" />
                  
                 
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Background="{DynamicResource WindowBackgroundBrush3}"  
                    VerticalAlignment="Stretch" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="AUTO" />
                            <RowDefinition Height="AUTO" />
                            <RowDefinition Height="AUTO" />
                        </Grid.RowDefinitions>


                    </Grid>
                </Border>
                <Border HorizontalAlignment="Stretch"  Background="{DynamicResource WindowBackgroundBrush3}" BorderThickness="0"  Margin="5">
                    <ScrollViewer  HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid>
                            <Grid.RowDefinitions>
                                    <RowDefinition Height="AUTO" />
                                    <RowDefinition Height="AUTO" />
                                <RowDefinition Height="AUTO" />
                                <RowDefinition Height="AUTO" />
                            
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" x:Name="StatusLabel" Foreground="{DynamicResource ThemeTextColorBrush}"  Text="Status" TextTrimming="WordEllipsis" HorizontalAlignment="Left"
                                       TextAlignment="Center" TextWrapping="Wrap" />
                            <my:TMGProgressBar Grid.Row="1" x:Name="ProgressBar" Background="{DynamicResource ControlColourUnselectedBrush}" HorizontalAlignment="Stretch" Height="20" Minimum="0"  Maximum="10000" Value="0"  FontSize="14" IsIndeterminate="False" Margin="5,5,5,5" Foreground="{DynamicResource ControlColourBrush}"  />
                           
                            <Label Grid.Row="2" x:Name="StartTimeLabel" Foreground="{DynamicResource ThemeTextColorBrush}" FontSize="14" Content="Start Time" HorizontalAlignment="Left" Margin="5,0,0,0" />
                            <Label Grid.Row="3" x:Name="ElapsedTimeLabel" Foreground="{DynamicResource ThemeTextColorBrush}" FontSize="14" Content="Elapsed Time" HorizontalAlignment="Left" Margin="5,0,0,0" />
                        </Grid>
                    </ScrollViewer>
                </Border>
            </Grid>

        </Grid>
        </GroupBox>

        <GroupBox Foreground="{DynamicResource ThemeTextColorBrush}" Margin="3" Grid.Row="1" Grid.Column="2" Header="Console Output" BorderThickness="0.5">
            <Border  Margin="2"  x:Name="ConsoleBorder" BorderThickness="0" VerticalAlignment="Stretch" Background="{DynamicResource WindowBackgroundBrush3}"
                Visibility="Visible" >
                <Grid VerticalAlignment="Stretch" >
                    <Grid.RowDefinitions>
                  
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
               
                    <Border HorizontalAlignment="Stretch" Margin="0,0,0,0" BorderThickness="1"  Grid.Row="0" BorderBrush="{DynamicResource WindowBackgroundBrush3}">
                        <ScrollViewer  Padding="0" x:Name="ConsoleScrollViewer"   BorderThickness="0"  
                              HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible"
                              VerticalAlignment="Stretch"  BorderBrush="{DynamicResource WindowBackgroundBrush1}" Margin="0,0,0,0">
                            <TextBox  HorizontalAlignment="Stretch" Padding="0" Margin="0" x:Name="ConsoleOutput" Background="{DynamicResource WindowBackgroundBrush2}" Foreground="{DynamicResource ThemeTextColorBrush}"
                         TextWrapping="Wrap" Text="{Binding ConsoleOutput}" UndoLimit="0" IsUndoEnabled="False"
                       TextChanged="ConsoleOutput_TextChanged"
                             IsReadOnly="True" IsReadOnlyCaretVisible="True" BorderBrush="{x:Null}"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>
        </GroupBox>
    </Grid>
</UserControl>







