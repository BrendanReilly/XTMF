                            <Grid>
                                <TextBlock DockPanel.Dock="Left" Name="ViewTitleBlock"  HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="22" Text="{Binding ViewTitle}"/>
                                <materialDesign:ColorZone  Visibility="{Binding SearchBoxVisiblity}" Width="250"  Mode="PrimaryDark" Padding="8 4 8 4" CornerRadius="2" Panel.ZIndex="1"
