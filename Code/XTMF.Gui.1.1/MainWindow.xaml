                    <dockablz:Layout   Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="0">
                    <dragablz:TabablzControl ShowDefaultCloseButton="True"   x:Name="DockManager" ConsolidateOrphanedItems="True"  >
