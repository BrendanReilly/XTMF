<Window x:Class="XTMF.Gui.SingleWindowGUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:XTMF.Gui"
        WindowStartupLocation="CenterScreen"
        Title="eXtensible Travel Model Framework" Width="1024" Height="768" MinWidth="640" MinHeight="600"
        Background="Transparent"
        ScrollViewer.CanContentScroll="True" Icon="/XTMF.Gui;component/Images/XTMF_icon_2.ico" Foreground="White"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/XTMF.Gui;component/Resources/underpassbg.png"
                            Stretch="UniformToFill"  AlignmentX="Center" AlignmentY="Center" Opacity="0.6" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <my:XTMFHeader Grid.Row="0" x:Name="HeaderControl" />
        <Grid Grid.Row="1" x:Name="CurrentMode" />
        <Grid Grid.Row="1" x:Name="LoadingPane" Visibility="Hidden">
            <Border Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center"
                    BorderBrush="White" Background="{StaticResource ResourceKey=ControlBackgroundBrush}" BorderThickness="2">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Loading" FontSize="24" Foreground="White" />
            </Border>
        </Grid>
    </Grid>
</Window>