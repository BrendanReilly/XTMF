<UserControl x:Class="XTMF.Gui.Pages.ViewRunsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:my="clr-namespace:XTMF.Gui"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="AUTO" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label x:Name="HeaderString" FontSize="16" Foreground="White" Grid.Row="0" Content="View Previous Run" />
        <my:Selector x:Name="PastRuns" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1"
                     NoItemsText="There are no previous runs found"
                     ItemSelected="PastRuns_ItemSelected" ItemRightClicked="PastRuns_ItemRightClicked"
 />
    </Grid>
</UserControl>