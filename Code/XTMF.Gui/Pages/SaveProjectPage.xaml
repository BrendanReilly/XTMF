<UserControl x:Class="XTMF.Gui.Pages.SaveProjectPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:my="clr-namespace:XTMF.Gui" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Focusable="True">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label Grid.Row="0" Foreground="White" HorizontalAlignment="Center" x:Name="ProjectNameLabel" FontSize="24" Margin="5,5,5,5" />
        <StackPanel Orientation="Horizontal">
            <my:BorderIconButton x:Name="SaveButton"
                             Width="250"
                             HighlightColour="{DynamicResource ResourceKey=InformationGreen}"
                             Header="Save Project"  Margin="5,5,5,5"
                             Text="Save the project" Icon="/XTMF.Gui;component/Resources/saveHS.png" Clicked="SaveButton_Clicked" />
            <my:BorderIconButton x:Name="DontSaveButton" Width="250"
                             HighlightColour="{DynamicResource ResourceKey=WarningRed}"
                             Header="Do not Save"  Margin="5,5,5,5"
                             Text="Do Not save the Project" Icon="/XTMF.Gui;component/Images/delete.png" Clicked="DontSaveButton_Clicked" />
        </StackPanel>
    </StackPanel>
</UserControl>