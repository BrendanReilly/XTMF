<UserControl x:Class="XTMF.Gui.Pages.CopyFileConflictPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:my="clr-namespace:XTMF.Gui"
             mc:Ignorable="d">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Focusable="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="AUTO" />
            <RowDefinition Height="AUTO" />
            <RowDefinition Height="AUTO" />
            <RowDefinition Height="AUTO" />
            <RowDefinition Height="AUTO" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Foreground="White" HorizontalAlignment="Center" FontSize="24" Content="File Name Conflict" />
        <Label x:Name="FileNameLabel" HorizontalAlignment="Center" Grid.Row="1" Foreground="White" FontSize="20" Content="" />
        <my:BorderIconButton Grid.Row="2" Width="300" Header="Overwrite" Text="Replace the old with the new."
                             Clicked="Overwrite_Clicked" Icon="/XTMF.Gui;component/Resources/FloppyDisk.png" HighlightColour="{StaticResource InformationGreen}" />
        <my:BorderIconButton Grid.Row="3" Width="300" Header="Rename" Text="Rename instead of replacing"
                             Clicked="Rename_Clicked" Icon="/XTMF.Gui;component/Resources/112_ArrowReturnLeft_Blue_24x24_72.png" />
        <my:BorderIconButton Grid.Row="4" Width="300" Header="Don't Copy" Text="Do not copy this file"
                             Clicked="Cancel_Clicked" Icon="/XTMF.Gui;component/Images/delete.png" HighlightColour="{StaticResource WarningRed}" />
    </Grid>
</UserControl>