<UserControl x:Class="XTMF.Gui.UserControls.PathLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" Cursor="Hand">
    <Label x:Name="PathText" Foreground="White" FontSize="14" FontStyle="Italic">
        <Label.Triggers>
            <EventTrigger RoutedEvent="Label.MouseEnter" SourceName="PathText">
                <EventTrigger.Actions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation From="White" To="{DynamicResource ResourceKey=HeaderSelectionColour}" Duration="0:0:0.25"
                                            Storyboard.TargetName="PathText"
                                            Storyboard.TargetProperty="Foreground.Color" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger.Actions>
            </EventTrigger>
            <EventTrigger RoutedEvent="Label.MouseLeave" SourceName="PathText">
                <EventTrigger.Actions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation From="{DynamicResource ResourceKey=HeaderSelectionColour}" To="White" Duration="0:0:0.25"
                                            Storyboard.TargetName="PathText"
                                            Storyboard.TargetProperty="Foreground.Color" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger.Actions>
            </EventTrigger>
        </Label.Triggers>
    </Label>
</UserControl>